      %td= category.name
      %td= link_to 'Show', user_category_path(user, category)
      %td= link_to 'Edit', edit_user_category_path(user, category)
      %td= link_to 'Destroy', user_category_path(user, category), method: :delete, data: { confirm: 'Are you sure?' }

