= simple_form_for([user, transaction], :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs.row
    = f.input :date, as: :string, input_html: { class: 'date_picker input-small' }, :wrapper_html => { :class => 'span3' }
    = f.input :amount, input_html: { class: 'input-mini' }, :wrapper_html => { :class => 'span1' }
  = f.association :category, input_html: { class: 'input-xlarge'}
  = f.input :concept, input_html: { rows: "3", class: 'input-xlarge' }

  .form-actions
    = f.button :submit
